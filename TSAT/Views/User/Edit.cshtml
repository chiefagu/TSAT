@model ApplicationUser

@{
	Layout = "_DashboardLayout";

}
<div class="container">

<section class="section">
      <div class="row">
        <div class="col-lg-8">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Edit User</h5>

              <!-- General Form Elements -->
              <form asp-action="Edit" method="post">
                
                <div class="row mb-3">
                  <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                  <div class="col-sm-8">
                    <input asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                  <div class="col-sm-8">
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                  </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" readonly class="form-control">
                        <input asp-for="Email" readonly hidden class="form-control">

                    </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="RoleId" class="col-sm-4 col-form-label"></label>
                  <div class="col-sm-8">
                    <select 
                        asp-for="RoleId"
                        asp-items="@Model.RoleList"
                        class="form-select" 
                    >
                        <option disabled selected>-- Select Role --</option>
                    </select>
                  </div>
                </div>


                <div class="row mb-3 offset-4">
              
                  <div class="col-sm-8">
                    <button 
                        type="submit" 
                        class="btn btn-success w-100"
                    >Update</button>
                  </div>
                </div>
                

              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>

       
      </div>
    </section>
</div>