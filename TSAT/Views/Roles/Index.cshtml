@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

@{
	Layout = "_DashboardLayout";
}
<div class="pagetitle">
	<h1>Roles</h1>
</div>
<section class="section dashboard">
	<div class="row">
		<a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">Create New Role</a>
		<div class="col-lg-12">
			

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">
						<a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">Create New Role</a>
					</h5>
					@if (Model.Any())
					{
						<!-- Table with hoverable rows -->
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col">ID</th>
									<th scope="col">Name</th>
									<th scope="col"></th>
									<th scope="col"></th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>

										<th scope="row">@item.Id</th>
										<td>@item.Name</td>
										<td>
											<a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor: pointer">Edit</a>
										</td>
										<td>
											<form asp-action="Delete" asp-route-id="@item.Id">
												<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this ?')">Delete</button>
											</form>
										</td>
									</tr>

								}

							</tbody>
						</table>
						<!-- End Table with hoverable rows -->
					}

				</div>
			</div>

		</div>

	</div>
</section>


