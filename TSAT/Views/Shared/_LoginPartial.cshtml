@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-none d-lg-flex">
	@if (SignInManager.IsSignedIn(User))
	{

		<a class="btn btn-link text-muted" role="button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>

		
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>



	}
	else
	{

		<a class="btn btn-link text-muted" role="button" asp-area="Identity" asp-page="/Account/Register">Register</a>

		<a class="btn btn-link text-muted" role="button" asp-area="Identity" asp-page="/Account/Login">Login</a>
	}
</div>
